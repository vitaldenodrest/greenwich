\ProvidesPackage{beamercolorthemecs}[2025/10/01 v1.1.gre Beamer theme for CentraleSupelec x University of Greenwich collaboration] 

\mode<presentation>

% Declaring colors

% CS logo colors
\definecolor{cs-logored}{RGB}{176,11,58}
\definecolor{cs-logoblue}{RGB}{125,99,142} % Not that blue...
% Greenwich logo colors
\definecolor{gre-logoblue}{RGB}{1,3,57}
% Legacy Frédéric Boulanger CS colors
\definecolor{cs-lightred}{RGB}{222,137,148}
\definecolor{cs-lightblue}{RGB}{196,181,206}
\definecolor{cs-dark}{RGB}{35,31,32}
\definecolor{cs-darkgray}{RGB}{145,143,144}
\definecolor{cs-gray}{RGB}{167,165,166}
\definecolor{cs-ligthgray}{RGB}{211,210,210}
%\definecolor{cs-deepblue}{cmyk}{0.96,0.65,0.25,0.09}
%\definecolor{cs-blue}{cmyk}{0.91,0.54,0.15,0.02}
%\definecolor{cs-lightblue}{cmyk}{0.85,0.45,0.09,0}
\definecolor{cs-orange}{cmyk}{0,0.45,0.87,0}
% Alert color
\definecolor{alert-red}{RGB}{255, 0, 0}


% Setting color palette

% Shadow color
\setbeamercolor{item projected}{bg=cs-darkgray}
% Outer theme palette. What is this for?
\setbeamercolor*{palette primary}{fg=cs-logored}
\setbeamercolor*{palette secondary}{fg=gre-logoblue}
\setbeamercolor*{palette tertiary}{fg=cs-logoblue}
\setbeamercolor*{palette quaternary}{fg=white,bg=black}
% Sidebar palette
%\setbeamercolor*{sidebar}{use=structure,bg=structure.fg}
%\setbeamercolor*{palette sidebar primary}{use=structure,fg=cs-logoblue}
%\setbeamercolor*{palette sidebar secondary}{fg=white}
%\setbeamercolor*{palette sidebar tertiary}{use=structure,fg=cs-lightblue}
%\setbeamercolor*{palette sidebar quaternary}{fg=white}
% Title color
\setbeamercolor*{titlelike}{use=palette primary, parent=palette primary}
% Normal colors
\setbeamercolor*{block title}{fg=white, bg=gre-logoblue}
\setbeamercolor*{block body}{bg=gre-logoblue!10}
% Alerted colors
\setbeamercolor*{block title alerted}{fg=white, bg=alert-red}
\setbeamercolor{alert}{use=palette primary, parent=palette primary} % What is this for?
\setbeamercolor*{block body alerted}{bg=alert-red!10}
\setbeamercolor{alerted text}{use=palette primary, parent=palette primary}
% Example colors
\setbeamercolor*{block title example}{fg=white, bg=cs-logoblue}
\setbeamercolor*{block body example}{bg=cs-logoblue!10}
\setbeamercolor{example}{use=palette tertiary, parent=palette tertiary} % What is this for?
\setbeamercolor{example text}{use=palette tertiary, parent=palette tertiary}
% What is this for?
\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}
% Footline colors
\setbeamercolor*{author in head/foot}{fg=white} % Not used
\setbeamercolor*{title in head/foot}{fg=gre-logoblue} % Title
\setbeamercolor*{date in head/foot}{fg=white} % Date and frame number
\setbeamercolor*{section in head/foot}{fg=cs-logored} % Section and subsection
\setbeamercolor*{subsection in head/foot}{parent=palette primary} % Not used
% Table of contents colors
\setbeamercolor*{section in toc}{fg=gre-logoblue}
\setbeamercolor*{subsection in toc}{fg=cs-logoblue}


\mode
<all>

